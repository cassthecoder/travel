@import "bootstrap-sprockets";
@import "bootstrap";

body {
  background: url(<%= asset_path "travel_background.jpg" %>) no-repeat;
  background-size: cover;
}


/*TEXTS*/

h1 {
  font-family: 'Lobster', cursive;
  color: #DBD8D3;
  text-align: center;
  font-size: 10vh;
  text-shadow: 3px 1px 1px rgba(0, 0, 0, 1);
}

h1 span {     
   background: transparent;
   position: absolute; 
   top: 4em; 
   left: 0; 
   width: 100%; 
}

.about > h3{
  color:#DAAC88;
  text-shadow: 3px 1px 1px rgba(0, 0, 0, 1);
}

.welcome > h2{
  font-family: 'Lobster', cursive;
  color: #282A27;
  text-align: center;
}

.contact > h2{
  font-family: 'Lobster', cursive;
  color: #DBD8D3;
  text-shadow: 3px 1px 1px rgba(0, 0, 0, 1);
  text-align: center;
}

.contact > h3 {
  font-family: 'Lobster', cursive;
  color: #DAAC88;
  text-shadow: 3px 1px 1px rgba(0, 0, 0, 1);
  text-align: center;
}

h3{
  color:#282A27;
  font-family: 'Lobster', cursive;
  text-align: center;
}

h4{
  font-family: 'Raleway', sans-serif;
  color: #DBD8D3;
}

p{
  font-family: 'Raleway', sans-serif;
}

li{
  font-family: 'Raleway', sans-serif;
}

.nav .nav-pills li{
  color: #DBD8D3;
}

/*IMAGES*/
.container .show img{
  width: 100%;
  height: auto;
}

.welcome img{
  animation: roll 3s infinite;
  transform: rotate(30deg);
}

@keyframes roll {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}

/*FORM*/
.form-group{
  font-family: 'Raleway', sans-serif;
  color:#DBD8D3;
}

.form-control{
  background-color: black;
  font-family: 'Raleway', sans-serif;
  color:#DAAC88;
}

textarea.form-control{
  font-family: 'Raleway', sans-serif;
  color:#DAAC88;
}

/*CONTAINERS AND SUCH*/

.jumbotron{
  background-color: rgba(0,0,0,.6);
  width:100%;
}

.container {
  background: transparent;
}

.container .front-page{
  margin-top: 30vh;
}

.well{
  background-color: #DBD8D3;
  height: auto;
}

/*NAVBAR*/

.navbar-default .navbar-brand {
  font-family: 'Lobster', cursive;
  color: #000;
}

.nav .nav-pills{
  background-color: #715546;
}

/*THINGS TO DO W CLICKING*/
ul a{
  font-family: 'Raleway', sans-serif;
  color:#DAAC88;
  background-color: #403B38;
}

.navbar-default ul a {
  background-color: transparent;
}

a .button-newnew{
  font-family: 'Raleway', sans-serif;
  color:#403B38;
}

.glyphicon{
  color: #715546;
  font-size: 1.5em;
}

a:hover{
  color:#DAAC88; 
  background-color:transparent; 
  text-decoration:none;
}

a:active{
  color:#DAAC88; 
  background-color:transparent; 
  text-decoration:none;
}

/*BUTTONS*/

.btn {
  border-color: black;
  border-radius: 10px;
  -webkit-box-shadow: 0px 5px 0px rgba(0, 0, 0, 1);
  -moz-box-shadow:    0px 5px 0px rgba(0, 0, 0, 1);
  box-shadow:         0px 5px 0px rgba(0, 0, 0, 1);
  -webkit-border-radius: 30px;
  -moz-border-radius: 30px;
  border-radius: 30px;
}

.button-newnew {
  background-color: #DAAC88;
  font-family: 'Raleway', sans-serif;
  color:#403B38;
}

.button-newnew:hover {background-color: #E7B690;}

.button-newnew:active {
  background-color: #E7B690;
  box-shadow: 0 5px #666;
  transform: translateY(4px);
}

.button-back {
  padding: 15px 25px;
  font-size: 24px;
  text-align: center;
  cursor: pointer;
  outline: none;
  color: #fff;
  background:url(<%= asset_path "travel_background.jpg" %>) no-repeat;
  background-size: cover;
  background-position: center;
  border: black;
  border-radius: 15px;
}

.button-back:hover {background-color: rgba(0,0,0,.5);}

.button-back:active {
  background-color: rgba(0,0,0,.5);
  box-shadow: 0 5px #666;
  transform: translateY(4px);
}

