<%= form_for(destination) do |f| %>
  <% if destination.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(destination.errors.count, "error") %> prohibited this destination from being saved:</h2>

      <ul>
      <% destination.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field form-group">
    <%= f.label :city %><br>
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :country %><br>
    <%= f.text_field :country, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, placeholder: "Any address of a spot you liked or stayed or wish to stay in the future...we'll map it for you", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control", rows: "5", placeholder: "Take notes here. Maybe make a list of things you loved or write a journal entry about your experience, it's up to you :)" %>
  </div>

  <div class="form-group">
    <%= f.label "Photo" %><br>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions form-group">
    <%= f.submit class: "btn button-newnew" %>
  </div>

<% end %>
