<h1>Come Take a Trip with Me</h1>
<p>Welcome to my travel site, where you will go on a journey with me and help me find all the dope spots.</p>

<%= @homestate %>

<ul>
<% @countries.each do |country| %>
	<li><%= country %></li>
<% end %>
</ul>

<table class="table">
  <tr>
    <% @united_states.each do |key,value| %>
	  <th><%= key.titleize %></th>
    <% end %>
  </tr>
  <tr>
    <% @united_states.each do |key,value| %>      
      <% if value.kind_of?(Array) %>
          <td><%= value.join(", ") %></td>
      <% else %>
         <td><%= value %></td>
      <% end %> 
    <% end %>
  </tr>
</table>

<% @pictures.each do |picture| %>
	<%= image_tag picture, class: "img-responsive" %>
<% end %>


